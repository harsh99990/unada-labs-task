{
  "name": "unada-task",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "concurrently \"bun run vite\" \"bun run tailwind:watch\"",
    "tailwind:watch": "bun x @tailwindcss/cli -i ./src/assets/css/input.css -o ./src/assets/css/style.css --watch",
    "tailwind:build": "bun x @tailwindcss/cli -i ./src/assets/css/input.css -o ./src/assets/css/style.css --minify",
    "build": "vite build && bun run tailwind:build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.14",
    "@tailwindcss/postcss": "^4.1.14",
    "concurrently": "^9.2.1",
    "lucide-react": "^0.545.0",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.4",
    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "vite": "^7.1.7"
  }
}
